extends ../layout/layout.pug
block content
    h1(style='color: white') Product
    span(class='card1')
        each product in products
            .card(class='card2')
                img.card-img-top(src= product.img, alt='ha')
                .card-body
                    h5= product.name
                    p= product.description
                    a.btn.btn-primary(href='/product/'+product.id) Chọn
    nav(aria-label='Page navigation example')
        ul.pagination.justify-content-center
            li.page-item
                a.page-link(href='/product?page='+(page-1), tabindex='1' aria-disabled='true') Trước
            li.page-item
                a.page-link(href='/product?page='+(page-1))= page-1
            li.page-item
                a.page-link(href='/product?page='+page)= page
            li.page-item
                a.page-link(href='/product?page='+(page+1))= page+1
            li.page-item
                a.page-link(href='/product?page='+(page+1)) Sau

